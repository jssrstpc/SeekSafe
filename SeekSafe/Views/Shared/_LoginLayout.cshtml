<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SeekSafe</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0; 
            margin: 0;  
            padding: 0;
        }

        /* Container Styles */
        .container {
            width: 100% !important;
            max-width: 500px !important; 
            margin: 100px auto !important; 
            padding: 20px !important;
            background-color: #fff !important; 
            border-radius: 8px !important;
            box-shadow: 0 0 10px rgba(0, 0, 255, 0.3) !important; 
        }
        textarea {
            resize: vertical;
        }

        /* Button Styles */
        .btn {
            display: inline-block;
            margin-bottom: 10px; /* Add margin below the button */
            padding: 10px 20px;
            background-color: #007bff; /* Blue primary color */
            color: #fff; /* White text color */
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        
        .back-home {
            display: inline-block;
            text-align: left;      
            color: #666; /* Gray text color */
            text-decoration: none;
            margin-right: 290px;
            margin-left: 5px;

        }

        /* Forgot Password Link Styles */
        .forgot-password {
            display: inline-block;
            text-align: right;
            margin-top: 20px; /* Add margin above the "Forgot Password?" link */
            color: #666; /* Gray text color */
            text-decoration: none;
        }


        /* Header and Footer background color */
        header, footer {
            background-color: #052659;
            color: #C1E8FF; /* Text color for header and footer */
            padding: 10px 20px;
        }

        /* Input fields */
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 2px solid #052659;
            border-radius: 5px;
            background-color: transparent;
            color: #000000;
        }

        /* Login button */
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            background-color: #7DA0CA;
            color: #021024;
            font-weight: bold;
            cursor: pointer;
        }

        /* Optional: Hover effect for the login button */
        input[type="submit"]:hover {
            background-color: #C1E8FF;
            color: #021024;
        }

    </style>

</head>


<body>
    @RenderBody()
    @RenderSection("Scripts", required: false)

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>


</html>
